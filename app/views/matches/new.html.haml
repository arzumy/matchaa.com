
= simple_form_for(@match, :url => matches_path) do |f|
	%h1 Enter Name and  Email for Contestant
	%div.user.left
		= image_tag 'matchalove128.png', :style => 'float: left'
		= f.fields_for :player1 do |ff|
			= ff.input :name
			= ff.input :email
	%div.user.right
		= image_tag 'taskmastaa128.png', :style => 'float: left'
		= f.fields_for :player2 do |ff|
			= ff.input :name
			= ff.input :email

	= f.submit