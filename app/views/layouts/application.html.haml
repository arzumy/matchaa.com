!!!5
%head
  %title Matchaa.com
  %link{:href => 'http://fonts.googleapis.com/css?family=Holtwood+One+SC', :rel => 'stylesheet', :type => 'text/css'}
  %link{:href => 'http://fonts.googleapis.com/css?family=Oswald', :rel => 'stylesheet', :type => 'text/css'}
  = stylesheet_link_tag :all

%body
  %header#header
    %div.page
      %h1 matchaa
      - unless user_signed_in?
        %div.login
          = form_for(:user, url: registration_path(:user) ) do |f|
            %p
              = f.text_field :name, :placeholder => 'Your Name'
            %p
              = f.email_field :email, :placeholder => 'Your Email'
            %p
              = f.submit 'Make a Match'
      - if user_signed_in?
        = link_to 'Sign Out', users_sign_out_path, :class => 'nav'
        = link_to 'Create Match', new_match_path, :class => 'nav'
        = link_to 'My Match', mine_matches_path, :class => 'nav'

  %section#section
    %div.page
      - unless flash.empty?
        .notification.error
          - flash.each do |key, value|
            %h4= "#{key}: Wanted Dead or Alive "
            %p= value
      = yield

  %footer#footer
    %div.page
      %span.copyright This 'Machaa!' brought to you by OSOM PEOPLES


  = javascript_include_tag :defaults