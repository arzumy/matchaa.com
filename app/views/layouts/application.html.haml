!!!5
%head
  %title Matchaa.com
  %link{:href => 'http://fonts.googleapis.com/css?family=Holtwood+One+SC', :rel => 'stylesheet', :type => 'text/css'}
  %link{:href => 'http://fonts.googleapis.com/css?family=Oswald', :rel => 'stylesheet', :type => 'text/css'}
  = stylesheet_link_tag 'screen', 'ie'

%body
  %header#header
    %div.page
      %h1 matchaa
      - unless user_signed_in?
        %div.login
          = form_for(:user, url: registration_path(:user) ) do |f|
            %p
              = f.text_field :name, :placeholder => 'Your Name'
            %p
              = f.email_field :email, :placeholder => 'Your Email'
            %p
              = f.submit 'Make a Match'
      - if user_signed_in?
        = link_to 'Sign Out', users_sign_out_path, :class => 'nav'
        = link_to 'Create Match', new_match_path, :class => 'nav'

  %section#section
    %div.page
      - unless flash.empty?
        .notification.error
          - flash.each do |key, value|
            %h4= "#{key}: Wanted Dead or Alive "
            %p= value
      = yield

  %footer#footer
    %div.page
      %span.copyright= raw "This 'Machaa!' brought to you by #{link_to 'OSOM PEOPLES', "https://github.com/arzumy/matchaa.com/"}"


  = javascript_include_tag :defaults
  - if Rails.env.production?
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', '#{ENV['MC_GA']}']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();