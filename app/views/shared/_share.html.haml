%div.social-share
	%p Share this with other matchaas: 
	.matchaa-share-button
		%a{:href => url, :rel => '', :class => 'twitter-share-button', :'data-via' => 'fadzril', :'data-count' => 'horizontal'} Tweet
		%script{:src => 'http://platform.twitter.com/widgets.js', :type => 'text/javascript'}
	.matchaa-share-button
		#fb-root
		%script{:src => 'http://connect.facebook.net/en_US/all.js#appId=267470573266442&amp;xfbml=1'}
		%fb:like{:href => url, :send => 'true', :layout => 'button_count', :width => '150', :show_faces => 'true'}
	.matchaa-share-button.plus
		%script{:src => 'http://apis.google.com/js/plusone.js', :type => 'text/javascript'}
		%g:plusone
